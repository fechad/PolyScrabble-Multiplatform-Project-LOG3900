{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.1.0",
    "private": true,
    "scripts": {
        "start": "nodemon",
        "build": "rimraf out && tsc --project tsconfig.app.json",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish",
        "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test",
        "coverage": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' nyc mocha --config=.mocharc.json --node-env=test --exit"
    },
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/index.ts",
            "app/server.ts",
            "app/app.ts"
        ],
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "reporter": [
            "html",
            "text",
            "cobertura"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    },
    "_moduleAliases": {
        "@app": "out/"
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "express": "^4.18.2",
        "http-status-codes": "^2.2.0",
        "inversify": "^6.0.1",
        "module-alias": "^2.2.2",
        "mongodb": "^4.13.0",
        "morgan": "^1.10.0",
        "prettier": "^2.8.3",
        "reflect-metadata": "^0.1.13",
        "serve-favicon": "~2.5.0",
        "socket.io": "^4.5.4",
        "socket.io-client": "^4.5.4",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^4.6.0",
        "typedi": "^0.10.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.19.2",
        "@types/chai": "^4.3.4",
        "@types/chai-as-promised": "^7.1.5",
        "@types/cookie-parser": "1.4.3",
        "@types/cors": "2.8.13",
        "@types/express": "4.17.15",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/mock-fs": "^4.13.1",
        "@types/morgan": "~1.9.4",
        "@types/node": "^18.11.18",
        "@types/node-uuid": "0.0.29",
        "@types/sinon": "^10.0.13",
        "@types/supertest": "^2.0.11",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "chai": "~4.3.7",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-deprecation": "^1.3.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^39.6.4",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unicorn": "^45.0.2",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "mock-fs": "^5.2.0",
        "mongodb-memory-server": "^8.11.2",
        "nodemon": "^2.0.20",
        "nyc": "^15.1.0",
        "rimraf": "4.1.1",
        "sinon": "^15.0.1",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typescript": "~4.8.0"
    }
}
